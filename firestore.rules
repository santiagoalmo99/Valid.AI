rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // PROJECTS: Users can only read/write their own projects
    match /projects/{projectId} {
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow read, update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // INTERVIEWS: Secured with userId validation
    // Interviews should include userId field for proper ownership
    match /interviews/{interviewId} {
      // Allow create if authenticated and interview has matching userId
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Allow read if authenticated (for now, to support legacy data)
      allow read: if isAuthenticated();
      
      // Allow update/delete only if user owns the interview
      allow update, delete: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
    }
  }
}
